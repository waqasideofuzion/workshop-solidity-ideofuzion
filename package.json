{
  "name": "hardhat-project",
  "scripts": {
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "compile": "npm run prettier && npx hardhat compile",
    "test:hardhat": "npx hardhat test",
    "test:rinkeby": "npx hardhat test --network rinkeby",
    "deploy:hardhat": "npx hardhat run --network hardhat scripts/deploy.js",
    "deploy:rinkeby": "npx hardhat run --network rinkeby scripts/deploy.js",
    "deploy:mainnet": "npx hardhat run --network mainnet scripts/deploy.js",
    "coverage": "npx hardhat coverage",
    "slither": "slither ./contracts --solc-remaps '@openzeppelin=node_modules/@openzeppelin @chainlink=node_modules/@chainlink' --exclude naming-convention,external-function,low-level-calls --buidler-ignore-compile"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.2.0",
    "@openzeppelin/contracts-upgradeable": "^4.3.1",
    "@openzeppelin/hardhat-upgrades": "1.13.0",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.12",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "config": "^3.3.7",
    "dotenv": "^16.0.1",
    "bn-chai": "^1.0.1",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-wallet": "^1.0.1",
    "ethers": "^5.4.6",
    "hardhat": "^2.5.0",
    "hardhat-deploy": "^0.8.11",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.1.0",
    "typechain": "^8.1.0",
    "typescript": "^4.3.5",
    "web3": "^1.4.0",
    "solidity-coverage": "^0.7.20",
    "hardhat-abi-exporter": "^2.9.0",
    "ganache-cli": "^6.12.2",
    "hardhat-contract-sizer": "^2.3.0",
    "solc": "^0.8.15-fixed"
  }
}
